apt-get update
apt-get install -y nginx

echo "Holberton School" > sudo tee /var/www/html/index.nginx-debian.html

# configuring the the 404 error custom page
echo "Ceci n'est pas une page" > /usr/share/nginx/html/custom_404.html
sed -ie "s/^\t\tlocation = \/custom_404.html {\n\t\troot \/usr\/share\/nginx\/html;\n\t\tinternal;\n\t}/g" /usr/share/nginx/html/custom_404.html | sudo tee /etc/nginx/sites-available/default
# Restart nginx
sudo service nginx restart